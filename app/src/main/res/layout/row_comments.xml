<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:background="#FFF"
    android:layout_marginTop="7dp"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="User Name"
            android:id="@+id/rc_user_name"
            android:background="@drawable/visit_background"
            android:padding="2dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:textSize="20dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/rc_rating"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@drawable/rating_background"
            android:drawableLeft="@drawable/ic_star_black_24dp"
            android:padding="4dp"
            android:layout_alignParentRight="true"
            android:text="0.0"
            android:textColor="#fff"
            android:textSize="18sp" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:id="@+id/rc_comments"
        android:textSize="12sp"
        android:minHeight="50dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:textAlignment="inherit"
        android:background="@drawable/description_background"
        android:text="So I entered and I ordered for a Kheema Burger, coke and some fries. I was alone, I treated well by the staff. I sat on a table and the minute i dug my teeth into the burger my eyes widened. I looked at the receipt again making sure I was eating the same thing I ordered, because it was awesome. I downed one more Kheema burger and I could go on.
                        "/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:id="@+id/rc_date"
        android:text="20343242"/>

</LinearLayout>